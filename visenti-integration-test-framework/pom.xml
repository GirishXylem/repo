<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.visenti.qa</groupId>
	<artifactId>visenti-integration-test-framework</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>

	<properties>
		<environment>qa</environment>
		<customer>cloud</customer>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.surefire.plugin.version>3.0.0</maven.surefire.plugin.version>
		<cucumber.version>1.2.6</cucumber.version>
		<log4j.version>2.20.0</log4j.version>
	</properties>

	<profiles>
		<profile>
			<id>Daily-Report</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>${maven.surefire.plugin.version}</version>
						<configuration>
							<systemPropertyVariables>
								<environment>${environment}</environment>
								<customer>${customer}</customer>
							</systemPropertyVariables>
							<testSourceDirectory>${basedir}/src/main/java</testSourceDirectory>
							<testClassesDirectory>${project.build.directory}/classes/</testClassesDirectory>
							<additionalClasspathElements>
								<additionalClasspathElement>${basedir}/src/main/resources</additionalClasspathElement>
							</additionalClasspathElements>
							<skipTests>false</skipTests>
							<testFailureIgnore>true</testFailureIgnore>
							<excludes>
								<exclude>**/Test*.java</exclude>
							</excludes>
							<includes>
								<include>**/DailyReportAPIRunner.java</include>
							</includes>
							<forkCount>1</forkCount>
							<reuseForks>false</reuseForks>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>HM-Report</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>${maven.surefire.plugin.version}</version>
						<configuration>
							<systemPropertyVariables>
								<environment>${environment}</environment>
								<customer>${customer}</customer>
							</systemPropertyVariables>
							<testSourceDirectory>${basedir}/src/main/java</testSourceDirectory>
							<testClassesDirectory>${project.build.directory}/classes/</testClassesDirectory>
							<additionalClasspathElements>
								<additionalClasspathElement>${basedir}/src/main/resources</additionalClasspathElement>
							</additionalClasspathElements>
							<skipTests>false</skipTests>
							<testFailureIgnore>true</testFailureIgnore>
							<excludes>
								<exclude>**/Test*.java</exclude>
							</excludes>
							<includes>
								<include>**/HMReportAPIRunner.java</include>
							</includes>
							<forkCount>1</forkCount>
							<reuseForks>false</reuseForks>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<!-- ** Maven Dependencies ** -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>7.8.0</version>
			<exclusions>
